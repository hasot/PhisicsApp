<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/schedule_margin"
    android:layout_marginRight="@dimen/schedule_margin"
    android:layout_marginTop="@dimen/schedule_margin"
    app:cardBackgroundColor="@color/mainBackground"
    app:cardCornerRadius="@dimen/schedule_corner"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:elevation="@dimen/schedule_elevation">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_schedule_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layoutManager="LinearLayoutManager" />
</android.support.v7.widget.CardView>